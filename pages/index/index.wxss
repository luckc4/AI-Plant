page {
  height: 100vh;
  background-color: #F6F6F6;
}

.container {
  height: 100vh;
  background-color: #F6F6F6;
  padding: 170rpx 0 0 0;
}

/* 工具类 */
.row {
  display: flex;
  align-items: center;
}

.mb-32{
  margin-bottom: 32rpx;
}

/* 页面样式 */
.header-modular {
  height: 300rpx;
  background-color: #64C8FA;
  background: linear-gradient(to bottom, #56CCF2, #2F80ED);
  position: relative;
  padding: 30rpx;
  border-radius: 30rpx;
  margin: 20rpx 20rpx 30rpx 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 波浪动画 */
.wave-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  overflow: hidden;
}

.wave {
  position: absolute;
  left: 0;
  bottom: -2px;
  width: 200%;
  height: 120rpx;
  opacity: 0.6;
}

.wave1 {
  animation: wave-animation 10s linear infinite;
}

.wave2 {
  opacity: 0.3;
  animation: wave-animation 7s linear infinite;
}

@keyframes wave-animation {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

.header-modular .location-wrap {
  color: #ffffff;
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.header-modular .tmp {
  font-size: 120rpx;
  color: #ffffff;
  margin-right: auto;
  line-height: 1;
}

.header-modular .icon-weather {
  width: 140rpx;
  height: 140rpx;
}

.header-modular .tips-wrap {
  display: flex;
  justify-content: space-between;
}

.header-modular .tips {
  font-size: 28rpx;
  opacity: 0.8;
  color: #ffffff;
  flex: 1;
}

.header-modular .tips:nth-child(3) {
  text-align: right;
}

.header-modular .tips:nth-child(2) {
  text-align: center;
}

.card-modular {
  padding:0 30rpx;
  margin-top: 0;
  transition: all 0.3s ease;
  overflow: hidden;
}

.card-modular.hide {
  height: 0;
  opacity: 0;
  margin-top: 0;
}

.card-modular.show {
  height: auto;
  opacity: 1;
  margin-top: 16rpx;
}

.card-modular>.title {
  font-size: 40rpx;
  font-weight: bold;
  position: relative;
  margin-left: 14rpx;
  margin-bottom: 16rpx;
}

.card-modular>.title::before {
  content: "";
  position: absolute;
  left: -14rpx;
  top: 10rpx;
  bottom: 10rpx;
  width: 8rpx;
  border-radius: 10rpx;
  background-color: #2F80ED;
}

.card-modular .card-wrap {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx 0;
  width: 690rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.card-modular .card-wrap .item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  padding: 18rpx 0;
}
.card-modular .card-wrap .item.hourly{
  width: 138rpx;
} 
.card-modular .card-wrap .item.daily{
  width: 172.5rpx;
}
.card-modular .card-wrap .item .icon {
  width: 60rpx;
  height: 60rpx;
  margin: 64rpx 0;
}

.card-modular .card-wrap .item .text-gray {
  color: gray;
}

.card-modular .card-wrap .item .text-primary {
  color: #2F80ED;
}

/* 预报部分新样式 */
.forecast-section {
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.forecast-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-top: 0;
}

.forecast-header:last-of-type {
  margin-top: -10rpx;
}

.forecast-header .title {
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  margin-left: 14rpx;
}

.forecast-header .title::before {
  content: "";
  position: absolute;
  left: -14rpx;
  top: 10rpx;
  bottom: 10rpx;
  width: 6rpx;
  border-radius: 10rpx;
  background-color: #2F80ED;
}

.forecast-header .toggle-text {
  color: #2F80ED;
  font-size: 28rpx;
}

/* 轮播图样式 */
.banner {
  width: auto;
  height: 400rpx;
  margin: 0 20rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

/* Logo区域样式 */
.logo-container {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
  padding: 0 30rpx;
}

.logo-image {
  width: 200rpx;
  height: 200rpx;
}

/* 文章标题样式 */
.article-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  padding: 10rpx 30rpx 30rpx;
  text-align: center;
}

/* 文章内容样式 */
.article-content {
  padding: 30rpx;
  background-color: #F6F6F6;
}

.feature-section {
  margin-bottom: 40rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.7;
}

.bold-text {
  font-weight: bold;
}

.check-item {
  margin-top: 10rpx;
}

/* 底部文字样式 */
.footer-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.7;
  text-align: center;
  margin-top: 60rpx;
  font-weight: bold;
}