page {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}

.container {
  min-height: 100vh;
  width: 100vw;
  background-size: 100% 100% !important;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow-y: auto;
  box-sizing: border-box;
  padding-bottom: 30px;
}

button{
  margin:25px;
  font-size:10px;
  width:80%;
}
.userinfo-nickname{
  color :#aaa;
}
.button-sp-are {
  margin: 0 auto;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.button-sp-are button {
  margin: 10px 0;
  padding: 10px;
  border-radius: 8px;
  background-color: rgba(245, 245, 245, 0.8);
  color: #333;
  font-size: 16px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  text-align: center;
  transition: all 0.3s ease;
}

.data-card {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80% !important;
  margin-left: auto;
  margin-right: auto;
}

.data-card.active {
  transform: scale(1.5);
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.95) !important;
  box-shadow: 0 4px 10px rgba(0,0,0,0.3) !important;
}

.page-title {
  text-align: center;
  font-size: 22px;
  font-weight: bold;
  margin: 20px 0;
  color: #333;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 10px;
  border-radius: 10px;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

