.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.header-space {
  height: 20px;
  width: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: relative;
}

.back-arrow {
  font-size: 44rpx;
  color: #333;
  font-weight: bold;
  padding: 10rpx 20rpx;
  cursor: pointer;
}

.save-btn {
  font-size: 32rpx;
  color: #2ecc71;
  font-weight: bold;
  padding: 10rpx 20rpx;
  cursor: pointer;
}

.input-container {
  flex: 1;
  padding: 20rpx 30rpx;
}

.input-area {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

/* 为了确保文本在背景图片上可读 */
.input-area {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
  box-sizing: border-box;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.7); /* 添加半透明背景 */
}

/* 可能需要调整头部样式以适应背景图片 */
.header {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.5); /* 使边框稍微透明 */
  background-color: rgba(255, 255, 255, 0.5); /* 添加半透明背景 */
}